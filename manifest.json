{
  "manifest_version": 3,
  "name": "Auto Scroll",
  "version": "1.0",
  "description": "Automatically scrolls web pages.",
  "permissions": ["activeTab"],
  "host_permissions": [
  "https://*/*",
  "http://*/*"
],
  
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}